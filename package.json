{
  "name": "soar",
  "version": "0.3.0",
  "description": "Sensible static sites.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "bin": "lib/cli/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/soarjs/soar.git"
  },
  "homepage": "https://github.com/soarjs/soar",
  "scripts": {
    "copy-files": "node scripts/copy-files.js",
    "compile": "tsc",
    "build": "npm-run-all --serial compile copy-files",
    "format": "prettier . --write",
    "prepare": "husky install",
    "test": "jest",
    "postversion": "git tag -a v$npm_package_version -m $npm_package_version"
  },
  "keywords": [
    "generator",
    "ssg",
    "jsx",
    "website"
  ],
  "author": "Lucas Yunkyu Lee <me@luc.li>",
  "license": "MIT",
  "dependencies": {
    "@swc/core": "^1.2.84",
    "commander": "^8.2.0",
    "fast-glob": "^3.2.7",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@swc/jest": "^0.2.3",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2"
  },
  "files": [
    "lib",
    "jsx-runtime"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./jsx-runtime": "./jsx-runtime/index.js"
  },
  "engines": {
    "node": ">=14.14.0"
  }
}
